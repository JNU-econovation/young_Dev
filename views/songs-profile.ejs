  <script>
    function enroll_song(song_id) {
      console.log(song_id);
        axios
          .post("/enroll_song", {
            sid : song_id
          })
          .then(function(result) {
            if (result.status === 200) window.location.href = "/songs";
          })
          .catch(function(error) {
            alert(error.message);
          });
      }
  </script>

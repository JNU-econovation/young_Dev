<body>

  <section id="title">
    <div class="container-fluid">

      <!-- Nav Bar -->

      <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">piano tutoring</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/tutors">Tutors</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/songs">Songs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/community">Community</a>
            </li>
            <li class="nav-item">
              <% if(login_state) { %>
                <a class="nav-link" href="/userRoom"><%= user_name %>님</a>
              <% } else { %>
                <a class="login-button" href="/userRoom"><i class="far fa-user-circle fa-2x"></i></a>
              <% } %>
            </li>
        </div>
        </li>
        </ul>

      </nav>

    </section>

    <section id="post-form">
        <div class="container">
            <div class="row">
                
                <div class="col">
                    
                    <h1>Create post</h1>
                    
                    <form action="" method="POST">

                        <div class="form-group">
                            <label for="title">Title <span class="require"></span></label>
                            <input type="text" class="form-control" name="title" />
                        </div>
                        
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea rows="5" class="form-control" name="description" ></textarea>
                        </div>
                
                        
                        <!-- <div class="form-group">
                            <button type="submit" class="btn btn-dark">
                                Create
                            </button>
                            <button class="btn btn-default">
                                Cancel
                            </button>
                        </div> -->
                    </form>
                    
                    <input id="file-upload1" class="fill-upload" type="file" />
                    <span>
                        <div class="container" style="display: inline; margin-left: -100px;">
                          <div class="row" style="display: inline;">
                           <div class="col-md-12"style="display: inline;" >
                               <button type="button" class="btn btn-labeled btn-dark">Submit</button>
                           </div>
                          </div>
                        </div>
                    </span>

                </div>
                
            </div>
        </div>
    </section>
    
  





